extends base

block content
    .container
        .wrapper
            .inner-signup
                .signup-left
                form.form--signup
                    h3 Sign Up Form
                    section.alert-insert
                    .form-group
                        input#name.form-control(type='text' name='name' placeholder='Enter name' required='')
                    .form-group
                        input#email.form-control(type='email' placeholder='Enter email' required='')
                    .form-group
                        input#password.form-control(type='password' name='password' placeholder='Password' required='')
                    .form-group
                        input#passwordConfirm.form-control(type='password' name='passwordConfirm' placeholder='Confirm Password' required='')
                    button.signup-btn(type='submit') Register

