extends base

block content
    .container
        .wrapper
            .inner-login
                form.form--login
                    h3 Login
                    section.alert-insert
                    .form-group
                        input#email.form-control(type='email' placeholder='Email' required)
                    .form-group
                        input#password.form-control(type='password' name='password' placeholder='Password' required)
                    button.login-btn(type='submit') Enter
